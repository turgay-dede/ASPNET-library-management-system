@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarım";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div class="wrapper">

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Kitap Geçmişim</h1>

                </div>

            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <!-- /.row -->

            <div class="row">

                <div class="col-12">

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Kitap Geçmişim</h3>

                            <div class="card-tools">

                                <div class="input-group input-group-sm" style="width: 150px;">

                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Kitap Ara">

                                    <div class="input-group-append">

                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>

                                    </div>

                                </div>

                            </div>

                        </div>

                        <!-- /.card-header -->

                        <div class="card-body table-responsive p-0">

                            <table class="table table-hover text-nowrap">

                                <thead>

                                    <tr>

                                        <th>Kitap Adı</th>

                                        <th>Alıs Tarihi</th>

                                        <th>İade Tarihi</th>

                                    </tr>

                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                    <tr>

                                        <td>@item.TBLKİTAP.AD</td>

                                        <td>@item.ALISTARIH</td>

                                        <td>@item.IADETARIH</td>

                                        
                                    </tr>

                                    }
                                   

                                </tbody>

                            </table>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                </div>

            </div>

            <!-- /.row -->
            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>

    <!-- /.content -->

</div>