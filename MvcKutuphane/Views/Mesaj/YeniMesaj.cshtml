@model MvcKutuphane.Models.Entity.TBLMESAJLAR

@{

    ViewBag.Title = "YeniMesaj";

    Layout = "~/Views/Shared/_LayoutPanel.cshtml";

}


<section class="content">

    <div class="container-fluid">

        <div class="row">



            @Html.Action("PartialMesajMenu")

            <div class="col-md-9">

                <div class="card card-primary card-outline">
                    @using (Html.BeginForm("YeniMesaj", "Mesaj", FormMethod.Post))
                    {
                        <div class="card-header">

                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>

                        </div>

                        <!-- /.card-header -->

                        <div class="card-body">





                            <div class="form-group">

                                <input class="form-control" name="ALICI" placeholder="Kime:">

                            </div>

                            <div class="form-group">

                                <input class="form-control" name="KONU" placeholder="Konu:">

                            </div>

                            <div class="form-group">

                                <textarea id="compose-textarea" name="ICERIK" class="form-control" style="height: 300px"></textarea>

                            </div>
                            <input type="hidden" name="GONDEREN" value="@Session["Mail"]" />
                            <input type="hidden" name="TARIH" value="@DateTime.Now.ToShortDateString()" />


                        </div>

                        <!-- /.card-body -->

                        <div class="card-footer">

                            <div class="float-right">

                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>

                            </div>



                        </div>

                        <!-- /.card-footer -->
                    }
                </div>

                <!-- /.card -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </div><!-- /.container-fluid -->

</section>


<script>
    $(function () {

        //Add text editor

        $('#compose-textarea').summernote()

    })</script>

