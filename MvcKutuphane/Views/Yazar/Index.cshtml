@using MvcKutuphane.Models.Entity;
@model List<TBLYAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>DETAY</th>
            <th class="text-center" colspan="2">İŞLEMLER</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.AD</td>
                <td>@item.SOYAD</td>
                <td>@item.DETAY</td>
                <td class="text-center">@Html.ActionLink("Sil", "YazarSil", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
                <td class="text-center"><a href="/Yazar/YazarGetir/@item.ID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }

    </tbody>

</table>
<a href="/Yazar/YazarEkle/" class="btn btn-success">Yeni Yazar Ekle</a>