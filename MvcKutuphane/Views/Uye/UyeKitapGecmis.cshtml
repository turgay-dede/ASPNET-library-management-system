@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.uye</h2>

<table class="table table-striped">
    <thead>
        <tr style="background-color:rgb(252,178,22)">
            <th>Kİtap Adı</th>
            <th>Personel</th>
            <th>Alış Tarihi</th>
            <th>İade Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TBLKİTAP.AD</td>
                <td>@item.TBLPERSONEL.PERSONEL</td>
                <td>@(Convert.ToDateTime(item.ALISTARIH).ToString("dd/MM/yyyy"))</td>     
                <td>@(Convert.ToDateTime(item.IADETARIH).ToString("dd/MM/yyyy"))</td>
              
            </tr>
        }

    </tbody>
</table>

